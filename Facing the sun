mport java.util.*;
class Sunrise
{
	public static void main(String args[])
	{
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		int a[]=new int[n];
		for(int i=0;i<n;i++)
		{
				a[i]=s.nextInt();
		}
		int max=a[0],c=1;
		for(int i=1;i<n;i++)
		{
			if(max<a[i])
			{
				max=a[i];
				c++;
			}
		}
System.out.println(c);
}
}
